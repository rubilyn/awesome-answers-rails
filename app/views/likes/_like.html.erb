<% if user_signed_in? && can?(:like, @question) %>
  <% if like %>
    <%= link_to fa_icon('heart lg'),
      question_like_path(@question, like),
      method: :delete,
      remote: true %>
  <% else %>
    <%= link_to fa_icon('heart-o lg'),
      question_likes_path(@question),
      method: :post,
      remote: true %>
  <% end %>
<% end %>

(<%= pluralize @question.likes.count, 'like' %>)
